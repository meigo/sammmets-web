<style>
  /* FADE IN ON LOAD */
  .ani-in {
    opacity: 0.01;
    transform: scale(0.01) rotateX(-180deg);
    animation: in-keys 1s 0.25s ease-out forwards;
  }

  @keyframes in-keys {
    0% {
      opacity: 0.01;
      transform: scale(0.01) rotateX(-180deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotateX(0);
    }
  }
</style>
