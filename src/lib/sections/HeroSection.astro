---
import ParallaxImage from "@lib/components/ParallaxImage.astro";

// import { Picture } from "astro:assets";
import GrainOverlay from "@lib/components/GrainOverlay.astro";
import SmLogo from "@lib/svg/SmLogo.astro";
import parallaxImage from "@assets/parallax1.jpg";
---

<div class="absolute h-[50vh] flex justify-center items-center w-full mx-auto z-1">
  <div class="relative flex items-center justify-center w-64 -top-36 rellax" data-rellax-speed="-4" data-rellax-percentage="0.5">
    <div class="flex items-center justify-center p-2 xl:mt-24 rounded-full shadow-md w-52 h-52 bg-sm-white ani-in"><SmLogo /></div>
  </div>
</div>

<ParallaxImage src={parallaxImage} yOffset="0vh" loading="eager" decoding="sync" quality={50} grain />

